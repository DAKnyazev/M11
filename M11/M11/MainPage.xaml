<?xml version="1.0" encoding="utf-8" ?>
<m11:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m11="clr-namespace:M11;assembly=M11"
             x:Class="M11.MainPage"
             ControlTemplate="{StaticResource MainPageTemplate}">
    <StackLayout x:Name="MainLayout" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
        <Label FontSize="30" />
        <Label x:Name="BalanceTitleLabel" FontSize="18" Text="Баланс:" HorizontalTextAlignment="Center"/>
        <Label x:Name="BalanceLabel" FontSize="55" FontFamily="Bold,700" HorizontalTextAlignment="Center" TextColor="#996600" />
        <StackLayout x:Name="TicketLayout">
        </StackLayout>
        <StackLayout x:Name="CalculatorLayout">
            <Button Clicked="OpenCalculator" Text="Калькулятор"/>
        </StackLayout>
        <StackLayout x:Name="LastPaymentsLayout">
        </StackLayout>
    </StackLayout>
</m11:BaseContentPage>