<?xml version="1.0" encoding="utf-8" ?>
<local:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:M11"
             x:Class="M11.AuthPage">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label x:Name="LoginLabel" Text="Логин" FontSize="28"/>
        <Entry x:Name="LoginEntry" Text="" Keyboard="Keyboard.Telephone" FontSize="28" TextColor="#CC7732"/>
        <Label x:Name="PasswordLabel" Text="Пароль" FontSize="28"/>
        <Entry x:Name="PasswordEntry" Text="" IsPassword="True" FontSize="28" TextColor="#CC7732"/>
        <Button x:Name="EntryButton" Text="Войти" FontSize="28" Clicked="EntryButton_OnClicked"/>
    </StackLayout>
</local:BaseContentPage>
